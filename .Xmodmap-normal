!!!!! TECLAS AUXILIARES MUY USADAS !!!!!
!Bloque de mayúsculas como control
clear Lock
keycode 66 = Control_L NoSymbol Control_L NoSymbol Control_L
add Control = Control_L

! eñe mayúscula como Esc.
keycode  47 = ntilde Escape ntilde Escape asciitilde dead_doubleacute asciitilde dead_doubleacute ntilde Escape asciitilde dead_doubleacute ntilde Escape asciitilde dead_doubleacute

!Fuera Insert
keycode 118 =

!Menu cambia la entrada de mozc
keycode 135 = Hiragana_Katakana NoSymbol Menu NoSymbol Menu Menu

! Una sola pulsación para `.
keycode 34 = grave asciicircum grave asciicircum bracketleft dead_abovering bracketleft

! Intercambiamos mayúsculas izquierdo con <>. Único cambio peligroso.
keycode  50 = less greater less greater bar brokenbar bar brokenbar less greater bar brokenbar
keycode  94 = Shift_L NoSymbol Shift_L NoSymbol Shift_L


!!!!! CARACTERES TECLEADOS EN PROGRAMACIÓN !!!!!
! Altgr+W genera ".
keycode  25 = w W w W quotedbl Lstroke lstroke Lstroke w W lstroke Lstroke

! Altgr+D genera \.
keycode  40 = d D d D backslash ETH backslash ETH d D backslash ETH

! Altgr+F genera /.
keycode  41 = f F f F slash ordfeminine slash ordfeminine f F slash ordfeminine

!!!!! CARACTERES DEL ALEMÁN !!!!!
! Altgr+b genera ß.
keycode  56 = b B b B ssharp rightsinglequotemark rightdoublequotemark rightsinglequotemark b B rightdoublequotemark rightsinglequotemark b B rightdoublequotemark rightsinglequotemark
